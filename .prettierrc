{
	"trailingComma": "none",
	"apexInsertFinalNewline": false,
	"useTabs": true,
	"printWidth": 160,
	"tabWidth": 2,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": ".prettierrc",
			"options": { "parser": "json", "printWidth": 80 }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": "*.{yaml,yml}",
			"options": { "useTabs": false }
		},
		{
			"files": "*.json",
			"options": { "useTabs": true, "parser": "json" }
		}
	],
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"]
}
