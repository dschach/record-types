{
	"trailingComma": "none",
	"apexInsertFinalNewline": false,
	"useTabs": true,
	"printWidth": 160,
	"tabWidth": 2,
	"singleQuote": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": ".prettierrc",
			"options": { "parser": "json", "printWidth": 80 }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": "*.{yaml,yml}",
			"options": { "useTabs": false, "tabWidth": 2, "singleQuote": true }
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": true,
				"parser": "json",
				"printWidth": 80
			}
		},
		{
			"files": "docs/*.html",
			"options": {
				"parser": "html",
				"useTabs": true,
				"tabWidth": 2,
				"printWidth": 150,
				"htmlWhitespaceSensitivity": "css",
				"singleQuote": false
			}
		}
	],
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
	"$schema": "https://json.schemastore.org/prettierrc"
}
